@model IEnumerable<AppleFinder.Models.Orchard>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Map)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apples)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Map.MapID) @Html.DisplayFor(modelItems=>item.Map.MapID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apples.ApplesID) @Html.DisplayFor(modelItems=>item.Apples.ApplesID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrchardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrchardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrchardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
